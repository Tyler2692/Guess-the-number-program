#include <iostream>
using namespace std;

int main()
{
    int number = 82; //correct number
    int attempt = 1; //
    int guess;
    
    cout << "please enter a number between 1 - 100..." << endl;
    
    cin >> guess;
    
    if (guess > number){
        cout << "Sorry, it's too high. Please try again." << endl;
    }
    
    else if ( guess < number){
         cout << "Sorry, it's too low. Please try again." << endl;
    }
    
    else if (guess == number){
        cout << "Congrats!!! You guessed it correctly!!!" << endl;
    }
}
    
    
    
